{
  "hooks": {
    "before:init": ["pnpm run release:ci:test"],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "master",
    "requireCleanWorkingDir": false,
    "tagAnnotation": "Release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Loremi v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# ğŸ’« Loremi Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "âœ¨ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ©¹ Bug Fixes"
          },
          {
            "type": "chore",
            "section": "ğŸ—ï¸ Chore"
          },
          {
            "type": "docs",
            "section": "ğŸ“ Docs"
          },
          {
            "type": "style",
            "hidden": true
          },
          {
            "type": "refactor",
            "hidden": true
          },
          {
            "type": "perf",
            "hidden": true
          },
          {
            "type": "test",
            "hidden": true
          }
        ]
      }
    }
  },
  "npm": {
    "publish": true
  }
}
